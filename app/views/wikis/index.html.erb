<h1>Wikis</h1>

<% if user_is_authorized_to_create? %>
 <div class="row">
     <div class="col-md-4">
         <%= link_to "Make a New Wiki", new_wiki_path, class: 'btn btn-success' %>
     </div>
  </div>
 <% end %>

 <% @wikis.each do |wiki| %>
     <div class="media">
         <div class="media-body">
             <h4 class="media-heading">
                 <%= link_to markdown(wiki.title), wiki %>
             </h4>
         </div>
     </div>
 <% end %>
